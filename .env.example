# Application Settings
APP_NAME=Semantic Reader Backend
APP_VERSION=0.1.0
API_VERSION=v1

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS_COUNT=1
DEBUG_MODE=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# CORS Settings
ALLOWED_ORIGINS_STR=*

# Rate Limiting
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# UI Settings
ENABLE_UI=true

# Model Settings
MODEL=claude-3-7-sonnet-20250219
PERPLEXITY_MODEL=sonar-pro
MAX_TOKENS=64000
TEMPERATURE=0.2

# Database Settings
DATABASE_URL=sqlite:///semantic_reader.db
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_ECHO=false

# Document Processing Settings
OCR_ENABLED=false
OCR_LANGUAGE=eng
DETECT_RTL=true
ALLOWED_EXTENSIONS_STR=pdf,docx,txt
MAX_FILE_SIZE_MB=50 